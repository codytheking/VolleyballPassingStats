<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codyjking.volleyballpassingstats"
    android:versionCode="11"
    android:versionName="2.0.7" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="28" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="android.support.v4.app.CoreComponentFactory"
        android:fullBackupContent="true"
        android:icon="@mipmap/launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name="com.codyjking.volleyballpassingstats.MainActivity" >
            <intent-filter android:autoVerify="true" >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.codyjking.volleyballpassingstats.AboutActivity"
            android:label="@string/title_activity_about"
            android:parentActivityName="com.codyjking.volleyballpassingstats.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.codyjking.volleyballpassingstats.MainActivity" />
        </activity>
        <activity
            android:name="com.codyjking.volleyballpassingstats.SettingsActivity"
            android:label="Settings"
            android:parentActivityName="com.codyjking.volleyballpassingstats.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.codyjking.volleyballpassingstats.MainActivity" />
        </activity>

        <provider
            android:name="android.arch.lifecycle.ProcessLifecycleOwnerInitializer"
            android:authorities="com.codyjking.volleyballpassingstats.lifecycle-trojan"
            android:exported="false"
            android:multiprocess="true" />
    </application>

</manifest>